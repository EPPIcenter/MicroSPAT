{
  "name": "microspat",
  "version": "2.0.3",
  "scripts": {
    "dist-mac": "electron-builder -m",
    "dist-win": "electron-builder -w",
    "dist": "electron-builder -m -w",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^7.1.2",
    "electron-builder": "^22.2.0"
  },
  "build": {
    "productName": "MicroSPAT",
    "appId": "com.greenhouse.microspat",
    "directories": {
      "app": "app",
      "output": "dist"
    },
    "asarUnpack": [
      "**/*"
    ],
    "compression": "maximum",
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "runAfterFinish": false
    }
  }
}
